@model CreateUserDto
@{
	Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>MShop Giriş</title>

	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

	<link rel="stylesheet" type="text/css" href="~/register/css/nunito-font.css">

	<link rel="stylesheet" href="~/register/css/style.css" />
</head>
<body class="form-v6">
	<div class="page-content">
		<div class="form-v6-content">
			<div class="form-left">
				<img src="~/register/images/form-v6.jpg" alt="form">
			</div>
			<form class="form-detail" action="#" method="post">
				<h2>Giriş Formu</h2>
				<div class="form-row">
					<input type="text" asp-for="Name" id="full-name" class="input-text" placeholder="İsim ">
				</div>
				<div class="form-row">
					<input type="text" asp-for="Surname" id="full-name" class="input-text" placeholder="Soy İsim ">
				</div>
				<div class="form-row">
					<input type="text" asp-for="Email" id="your-email" class="input-text" placeholder="Mail">
				</div>
				<div class="form-row">
					<input type="password" asp-for="Password" id="password" class="input-text" placeholder="Şifre">
				</div>
				<div class="form-row">
					<input type="password" asp-for="ConfirmPassword" id="comfirm-password" class="input-text" placeholder="Şifre Tekrarı">
				</div>
				<div class="form-row-last">
					<button class="register">Kayıt Ol</button>
				</div>
				<div>
					<a href="~/Login/Index/" class="btn btn-success">Zaten Bir Hesabım Var</a>
				</div>
			</form>
		</div>
	</div>
</body>
</html>