@model CreateAddressDto
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/UILayout/_UILayout.cshtml";
}

<form method="post" asp-controller="Order" asp-action="Index">
	<div class="container-fluid">
		<div class="row px-xl-5">
			<div class="col-lg-8">
				<h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Billing Address</span></h5>



				<div class="bg-light p-30 mb-5">
					<div class="row">
						<div class="col-md-6 form-group">
							<label>Ad</label>
							<input class="form-control" type="text" placeholder="Ad" asp-for="UserName">
						</div>
						<div class="col-md-6 form-group">
							<label>SoyAd</label>
							<input class="form-control" type="text" placeholder="SoyAd" asp-for="UserSurname">
						</div>
						<div class="col-md-6 form-group">
							<label>E-mail</label>
							<input class="form-control" type="text" placeholder="mail" asp-for="Email">
						</div>
						<div class="col-md-6 form-group">
							<label>Mobile No</label>
							<input class="form-control" type="text" placeholder="+123 456 789 Telefon" asp-for="Phone">
						</div>
						<div class="col-md-6 form-group">
							<label>İl</label>
							<input class="form-control" type="text" placeholder="İl" asp-for="City">
						</div>
						<div class="col-md-6 form-group">
							<label>İlçe</label>
							<input class="form-control" type="text" placeholder="İlçe" asp-for="District">
						</div>
						@*    <div class="col-md-6 form-group">
                        <label>Ülke</label>
                        <select class="custom-select" asp-for="">

                            <option value="Türkiye" selected>Türkiye</option>
                            <option value="Almanya">Almanya</option>

                        </select>
                    </div> *@

						<div class="col-md-6 form-group">
							<label>Açık Adres Tarifi</label>
							<input class="form-control" type="text" placeholder="Adres Detayı" asp-for="Detail">
						</div>

						<div class="col-md-6 form-group">
							<label>Açıklama</label>
							<input class="form-control" type="text" placeholder="Açıklama" asp-for="Description">
						</div>
					</div>
				</div>

			</div>

			<!--OrderTotal-->
			<div class="col-lg-4">

				@await Component.InvokeAsync("_OrderTotalComponentPartial")

				<button class="btn btn-block btn-primary font-weight-bold py-3">Adres Bilgilerini Kaydet</button>
				

			</div>

		</div>
	</div>

</form>