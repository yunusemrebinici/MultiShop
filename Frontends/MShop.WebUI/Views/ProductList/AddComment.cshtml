@model CreateCommentDto
<div class="col-md-6">
    <h4 class="mb-4">Yorum Yapın</h4>
    <small>E-posta adresiniz yayımlanmayacaktır. Gerekli alanlar * ile işaretlenmiştir.</small>

    <form method="post" asp-controller="ProductList" asp-action="AddComment">
       <input type="hidden" asp-for="ProductId" value="@ViewBag.ProductId"/>
        <div class="form-group">
            <label for="message">Yorumunuz</label>
            <textarea id="message" cols="30" rows="5" class="form-control" asp-for="Comments" maxlength="100"></textarea>
        </div>
        <div class="form-group">
            <label for="name">Adınız *</label>
            <input type="text" class="form-control" id="name" asp-for="Name">
        </div>

        <div class="form-group">
            <label for="name">Puan</label>
            <span>1-5 Arasında</span>
            <input type="number" class="form-control" id="name" asp-for="Point">
        </div>

        <button>Gönder</button>
    </form>
</div>