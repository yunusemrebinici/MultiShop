<div class="col-lg-4">
    <form class="mb-30" asp-controller="Discount" method="post" asp-action="_ConfirmCouponCode">
        <div class="input-group">
            <input type="text" class="form-control border-0 p-4" name="couponCode" placeholder="Kupon Kodu">
            <div class="input-group-append">
                <button class="btn btn-primary">Kuponu Uygula</button>
            </div>
        </div>
    </form>
    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Sepet Tutarı</span></h5>
    <div class="bg-light p-30 mb-5">
        <div class="border-bottom pb-2">
            <div class="d-flex justify-content-between mb-3">
                <h6>Toplam</h6>
                <h6>$@ViewBag.SumPrice</h6>
            </div>
            <div class="d-flex justify-content-between">
                <h6 class="font-weight-medium">Kdv</h6>
                <h6 class="font-weight-medium">$@ViewBag.Kdv</h6>
            </div>
            <div class="d-flex justify-content-between">
                <h6 class="font-weight-medium">İndirim</h6>
                <h6 class="font-weight-medium">$@ViewBag.Rate</h6>
            </div>
        </div>
        <div class="pt-2">
            <div class="d-flex justify-content-between mt-2">
                <h5>Toplam Tutar</h5>
                <h5>$@ViewBag.TotalPrice</h5>
            </div>
            <a href ="/Payment/Index" class="btn btn-block btn-primary font-weight-bold my-3 py-3">Ödemeyi Tamamla</a>
        </div>
    </div>
</div>
