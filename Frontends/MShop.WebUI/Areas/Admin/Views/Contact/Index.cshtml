@model List<ResultContactDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
	int count = 0;
}
<div class="card">
	<div class="card-header">
		<div class="card-title">Mesajlar</div>
	</div>
	<div class="card-body">
		<table class="table table-head-bg-success">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Ad Soyad</th>
					<th scope="col">Tarih</th>
					<th scope="col">Konu</th>
					<th scope="col">Mail</th>
					<th scope="col">Mesaj</th>
					<th scope="col">Sil</th>
					<th scope="col">Detaylar..</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					count++;
					<tr>
						<td>@count</td>
						<td>@item.Name</td>
						<td>@item.MessageTime.ToString("dd-MMM-yyyy")</td>
						<td>@item.Subject</td>
						<td>@item.Mail</td>
						@if (item.Message.Length > 25)
						{
							<td>@item.Message.Substring(0,25)</td>
						}
						else
						{
							
			        		<td>@item.Message</td>
						}
						

						<td><a href="/Admin/Contact/DeleteContact/@item.ContactId" class="btn btn-danger">Sil</a></td>
						<td><a href="/Admin/Contact/ContactDetail/@item.ContactId" class="btn btn-success">Detaylar</a></td>
					</tr>
				}

			</tbody>
		</table>
		
	</div>
</div>

