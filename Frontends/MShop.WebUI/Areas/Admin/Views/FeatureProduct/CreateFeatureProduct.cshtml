@model CreateFeatureProductDto
@{
	ViewData["Title"] = "CreateFeatureProduct";
	Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<form method="post">

	<div class="col-md-12">
		<div class="card">
			<div class="card-header">
				<div class="card-title">Öne Çıkan Ürün Ekleme</div>
			</div>
			<div class="card-body">
				<div class="form-group">
					<label for="squareInput">Ürün İsmi</label>
					<input type="text" class="form-control input-square" id="squareInput" asp-for="Title" placeholder="Ürün İsmi">
				</div>

				<div class="form-group">
					<label for="squareInput">Resim Yolu</label>
					<input type="text" class="form-control input-square" id="squareInput" asp-for="ImageUrl" placeholder="Resim Yolu">
				</div>

				<div class="form-group">
					<label for="squareInput">Resim Yolu</label>
					<input type="text" class="form-control input-square" id="squareInput" asp-for="Price" placeholder="Fiyat">
				</div>

			</div>
			<div class="card-action">
				<button class="btn btn-success">Kaydet</button>
			</div>
		</div>

	</div>

</form>

