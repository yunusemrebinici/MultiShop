@model List<ResultFeatureProductDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="card">
	<div class="card-header">
		<div class="card-title">Öne Çıkan Ürünler</div>
	</div>
	<div class="card-body">
		<table class="table table-head-bg-success">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Ürün Adı</th>
					<th scope="col">Görsel Yolu</th>
					<th scope="col">Fiyat</th>
					<th scope="col">Sil</th>
					<th scope="col">Güncelle</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					count++;
					<tr>
						<td>@count</td>
						<td>@item.Title</td>
						<td>@item.Price</td>
						<td>@item.ImageUrl</td>
						<td><a href="/Admin/FeatureProduct/DeleteFeatureProduct/@item.FeatureProductId" class="btn btn-danger">Sil</a></td>
						<td><a href="/Admin/FeatureProduct/UpdateFeatureProduct/@item.FeatureProductId" class="btn btn-success">Güncelle</a></td>
					</tr>
				}

			</tbody>
		</table>
		<a href="/Admin/FeatureProduct/CreateFeatureProduct" class="btn btn-info">Öne Çıkan Ürün Ekle</a>
	</div>
</div>

