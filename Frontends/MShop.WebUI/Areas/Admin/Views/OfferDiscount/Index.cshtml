@model List<ResultOfferDiscountDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="card">
	<div class="card-header">
		<div class="card-title">Öne Çıkan Özel İndirim</div>
	</div>
	<div class="card-body">
		<table class="table table-head-bg-success">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Başlık</th>
					<th scope="col">Alt Başlık</th>
					<th scope="col">Resim Yolu</th>
					<th scope="col">Sil</th>
					<th scope="col">Güncelle</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					count++;
					<tr>
						<td>@count</td>
						<td>@item.Title</td>
						<td>@item.SubTitle</td>
						<td>@item.ImageUrl</td>
						<td><a href="/Admin/OfferDiscount/DeleteOfferDiscount/@item.OfferDiscountId" class="btn btn-danger">Sil</a></td>
						<td><a href="/Admin/OfferDiscount/UpdateOfferDiscount/@item.OfferDiscountId" class="btn btn-success">Güncelle</a></td>
					</tr>
				}

			</tbody>
		</table>
		@if (ViewBag.count == 2)
		{
			<p>sayfa tasarımı açısından 2`den fazla veri olamaz</p>
		}
		else
		{
			<a href="/Admin/OfferDiscount/CreateOfferDiscount" class="btn btn-info">Özel İndirim Ekle</a>
		}

	</div>
</div>

