@model List<ResultProductDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="card">
	<div class="card-header">
		<div class="card-title">Kategori İşlemleri</div>
	</div>
	<div class="card-body">
		<table class="table table-head-bg-success">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Ürün Adı</th>
					<th scope="col">Fiyatı</th>
					<th scope="col">Detaylar</th>
					<th scope="col">Sil</th>
					<th scope="col">Güncelle</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					count++;
					<tr>
						<td>@count</td>
						<td>@item.ProductName</td>
						<td>@item.ProductPrice</td>
						@if (item.ProductDescription.Length >= 25)
						{
							<td>@item.ProductDescription.Substring(0,25) ...</td>
						}
						else{<td>@item.ProductDescription</td>}
						<td><a href="/Admin/Product/DeleteProduct/@item.ProductID" class="btn btn-danger">Sil</a></td>
						<td><a href="/Admin/Product/UpdateProduct/@item.ProductID" class="btn btn-success">Güncelle</a></td>
					</tr>
				}

			</tbody>
		</table>
		<a href="/Admin/Product/CreateProduct" class="btn btn-info">Ürün Ekle</a>
	</div>
</div>

