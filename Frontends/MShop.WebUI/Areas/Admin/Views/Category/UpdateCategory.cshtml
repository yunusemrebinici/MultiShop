@model UpdateCategoryDto
@{
	ViewData["Title"] = "UpdateCategory";
	Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<form method="post">

	@Html.HiddenFor(x => x.CategoryID)
	<div class="col-md-12">
		<div class="card">
			<div class="card-header">
				<div class="card-title">Kategori Güncelleme</div>
			</div>
			<div class="card-body">
				<div class="form-group">
					<label for="squareInput">Kategori İsmi</label>
					<input type="text" class="form-control input-square" id="squareInput" asp-for="CategoryName" placeholder="Kategori İsmi">
				</div>

				<div class="form-group">
					<label for="squareInput">Resim Yolu</label>
					<input type="text" class="form-control input-square" id="squareInput" asp-for="ImageUrl" placeholder="Resim Yolu">
				</div>


			</div>
			<div class="card-action">
				<button class="btn btn-success">Güncelle</button>
			</div>
		</div>

	</div>

</form>

